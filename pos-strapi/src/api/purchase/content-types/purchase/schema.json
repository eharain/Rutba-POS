{
  "kind": "collectionType",
  "collectionName": "purchases",
  "info": {
    "singularName": "purchase",
    "pluralName": "purchases",
    "displayName": "Purchases"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "orderId": {
      "type": "string",
      "required": true
    },
    "order_date": {
      "type": "datetime"
    },
    "order_recieved_date": {
      "type": "datetime"
    },
    "status": {
      "type": "enumeration",
      "enum": [
        "Draft",
        "Pending",
        "Submitted",
        "Partially Received",
        "Received",
        "Closed",
        "Cancelled"
      ],
      "default": "Draft"
    },
    "approval_status": {
      "type": "enumeration",
      "enum": [
        "Draft",
        "Pending Approval",
        "Not Required",
        "Approved",
        "Rejected",
        "Revised"
      ],
      "default": "Draft"
    },
    "total": {
      "type": "decimal"
    },
    "suppliers": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::supplier.supplier",
      "inversedBy": "purchases"
    },
    "items": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::purchase-item.purchase-item",
      "mappedBy": "purchase"
    },
    "users": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "plugin::users-permissions.user",
      "mappedBy": "purchases"
    },
    "gallery": {
      "type": "media",
      "multiple": true,
      "allowedTypes": [
        "images"
      ]
    },
    "receipts": {
      "type": "media",
      "multiple": true,
      "allowedTypes": [
        "files",
        "images",
        "videos",
        "audios"
      ]
    }
  }
}
