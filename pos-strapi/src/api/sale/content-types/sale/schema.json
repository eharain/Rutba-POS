{
  "kind": "collectionType",
  "collectionName": "sales",
  "info": {
    "singularName": "sale",
    "pluralName": "sales",
    "displayName": "Sale"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "invoice_no": {
      "type": "string",
      "required": true
    },
    "sale_date": {
      "type": "datetime",
      "required": true
    },
    "subtotal": {
      "type": "decimal"
    },
    "discount": {
      "type": "decimal"
    },
    "tax": {
      "type": "decimal"
    },
    "total": {
      "type": "decimal",
      "required": true
    },
    "payment_status": {
      "type": "enumeration",
      "default": "Unpaid",
      "enum": [
        "Paid",
        "Partial",
        "Unpaid"
      ]
    },
    "customer": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::customer.customer",
      "inversedBy": "sales"
    },
    "employee": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::employee.employee"
    },
    "items": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::sale-item.sale-item",
      "mappedBy": "sale"

    },
    "payments": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::payment.payment",
      "mappedBy": "sale"
    },
    "owners": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "plugin::users-permissions.user"
    },
    "branches": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::branch.branch",
      "mappedBy": "sales"
    },
    "return_status": {
      "type": "enumeration",
      "enum": ["None", "Returned", "PartiallyReturned"],
      "default": "None"
    },
    "sale_returns": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::sale-return.sale-return",
      "mappedBy": "sale"
    }
  }
}
