{
  "kind": "collectionType",
  "collectionName": "payments",
  "info": {
    "singularName": "payment",
    "pluralName": "payments",
    "displayName": "Payment"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "payment_method": {
      "type": "enumeration",
      "enum": [
        "Cash",
        "Card",
        "Bank",
        "Mobile Wallet"
      ]
    },
    "amount": {
      "type": "decimal"
    },
    "transaction_no": {
      "type": "string"
    },
    "payment_date": {
      "type": "datetime"
    },
    
    "cash_received": { "type": "decimal" },
    "change": { "type": "decimal" },
    "due": { "type": "decimal" },

    "sale": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::sale.sale",
      "inversedBy": "payments"
    },
    "branches": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::branch.branch",
      "mappedBy": "payments"
    }
  }
}
