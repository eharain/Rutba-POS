{
  "kind": "collectionType",
  "collectionName": "cms_pages",
  "info": {
    "singularName": "cms-page",
    "pluralName": "cms-pages",
    "displayName": "CMS Page",
    "description": "Static pages and blog posts for the public website"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "content": {
      "type": "richtext"
    },
    "excerpt": {
      "type": "text"
    },
    "featured_image": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images"
      ]
    },
    "gallery": {
      "type": "media",
      "multiple": true,
      "allowedTypes": [
        "images",
        "videos"
      ]
    },
    "page_type": {
      "type": "enumeration",
      "enum": [
        "page",
        "blog",
        "announcement"
      ],
      "default": "page"
    },
    "sort_order": {
      "type": "integer",
      "default": 0
    },
    "product_groups": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::product-group.product-group"
    },
    "related_pages": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::cms-page.cms-page"
    },
    "owners": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "plugin::users-permissions.user"
    }
  }
}
