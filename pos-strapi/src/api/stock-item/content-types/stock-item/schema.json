{
  "kind": "collectionType",
  "collectionName": "stock_items",
  "info": {
    "singularName": "stock-item",
    "pluralName": "stock-items",
    "displayName": "Stock Item"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": false
    },
    "sku": {
      "type": "string"
    },
    "barcode": {
      "type": "string",
      "unique": true
    },
    "status": {
      "type": "enumeration",
      "default": "InStock",
      "enum": [
        "Received",
        "InStock",
        "Reserved",
        "Sold",
        "Returned",
        "ReturnedDamaged",
        "ReturnedToSupplier",
        "Damaged",
        "Lost",
        "Expired",
        "Transferred"
      ]
    },
    "cost_price": {
      "type": "decimal"
    },
    "selling_price": {
      "type": "decimal"
    },
    "offer_price": {
      "type": "decimal"
    },
    "discount": {
      "type": "decimal",
      "default": 0
    },

    "product": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::product.product",
      "inversedBy": "items"
    },
    "purchase_item": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::purchase-item.purchase-item",
      "inversedBy": "items"
    },
    "sale_item": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::sale-item.sale-item",
      "inversedBy": "items"
    },
    "sale_return_item": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::sale-return-item.sale-return-item",
      "inversedBy": "items"
    },
    "branch": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::branch.branch",
      "inversedBy": "items"
    },
    "status_history": {
      "type": "component",
      "repeatable": true,
      "component": "pos.stock-status-history"
    }
  }
}
