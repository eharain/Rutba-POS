{
  "kind": "collectionType",
  "collectionName": "purchase_items",
  "info": {
    "singularName": "purchase-item",
    "pluralName": "purchase-items",
    "displayName": "Purchase Item"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "quantity": {
      "type": "integer"
    },
    "received_quantity": {
      "type": "integer",
      "default": 0
    },
    "price": {
      "type": "decimal"
    },
    "bundle_units": {
      "type": "decimal",
      "default": 1
    },
    "unit_price": {
      "type": "decimal"
    },
    "order_units": {
      "type": "integer"
    },
    "total": {
      "type": "decimal"
    },
    "status": {
      "type": "enumeration",
      "enum": [
        "Draft",
        "Pending",
        "Ordered",
        "Partially Received",
        "Received",
        "Cancelled",
        "Supplier Cancelled"
      ],
      "default": "pending"
    },
    "purchase": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::purchase.purchase",
      "inversedBy": "items"
    },
    "product": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::product.product",
      "inversedBy": "purchase_items"
    },
    "items": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::stock-item.stock-item",
      "mappedBy": "purchase_item"
    }
  }
}
