{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "singularName": "product",
    "pluralName": "products",
    "displayName": "Product",
    "description": "Items sold in the POS"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": false
    },
    "description": {
      "type": "richtext"
    },
    "sku": {
      "type": "string"
    },
    "supplierCode": {
      "type": "string"
    },
    "barcode": {
      "type": "string"
    },
    "cost_price": {
      "type": "decimal"
    },
    "offer_price": {
      "type": "decimal"
    },
    "selling_price": {
      "type": "decimal"
    },
    "tax_rate": {
      "type": "decimal"
    },
    "stock_quantity": {
      "type": "integer"
    },
    "bundle_units": {
      "type": "integer",
      "default": 1
    },
    "reorder_level": {
      "type": "integer"
    },
    "is_active": {
      "type": "boolean",
      "default": true
    },
    "categories": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::category.category"
    },
    "brands": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::brand.brand"
    },
    "items": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::stock-item.stock-item",
      "mappedBy": "product"
    },
    "purchase_items": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::purchase-item.purchase-item",
      "mappedBy": "product"
    },
    "users": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "plugin::users-permissions.user",
      "mappedBy": "products"
    },
    "branches": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::branch.branch",
      "mappedBy": "products"
    },
    "logo": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images"
      ]
    },
    "gallery": {
      "type": "media",
      "multiple": true,
      "allowedTypes": [
        "images",
        "videos",
        "audios"
      ]
    },
    "keywords": {
      "type": "json"
    },
    "suppliers": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::supplier.supplier",
      "inversedBy": "products"
    },
    "terms": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::term.term"
    },
    "parent": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::product.product",
      "inversedBy": "variants"
    },
    "variants": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::product.product",
      "mappedBy": "parent"
    },
    "is_variant": {
      "type": "boolean",
      "default": false
    }
  }
}
