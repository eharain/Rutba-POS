{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "singularName": "product",
    "pluralName": "products",
    "displayName": "Product",
    "description": "Items sold in the POS"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "sku": {
      "type": "string",
      "unique": true
    },
    "barcode": {
      "type": "string",
      "unique": true
    },
    "cost_price": {
      "type": "decimal"
    },
    "selling_price": {
      "type": "decimal",
      "required": true
    },
    "tax_rate": {
      "type": "decimal"
    },
    "stock_quantity": {
      "type": "integer"
    },
    "reorder_level": {
      "type": "integer"
    },
    "is_active": {
      "type": "boolean",
      "default": true
    },
    "category": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::category.category"
    },
    "brand": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::brand.brand"
    },
    "stock_items": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::stock-item.stock-item",
      "mappedBy": "product"
    },
    "users": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "plugin::users-permissions.user",
      "mappedBy": "products"
    },
    "branches": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::branch.branch",
      "mappedBy": "products"
    },
    "logo": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "gallery": {
      "type": "media",
      "multiple": true,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    }
  }
}
